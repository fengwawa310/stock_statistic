<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/wel_top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_banner"
        android:background="@color/mainBg">

        <ImageView
            android:id="@+id/iv_back"
            android:src="@mipmap/iv_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />

        <TextView
            android:text="库存录入"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_title"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="40dp">

                <TextView
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="编  号 :"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_stock_number"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/iv_search"
                        android:background="@drawable/selector_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="14dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="40dp">

                <TextView
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="名  称 :"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <sky.it.com.stock_statistics.customview.ClearEditText
                        android:id="@+id/et_stock_product_name"
                        android:layout_toStartOf="@+id/iv_record_product_name"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/iv_search"
                        android:background="@drawable/selector_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_record_product_name"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/iv_record_unuse"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="40dp">

                <TextView
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="单  位:"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <sky.it.com.stock_statistics.customview.ClearEditText
                        android:id="@+id/et_stock_unit"
                        android:layout_toStartOf="@+id/iv_record_unit"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/iv_search"
                        android:background="@drawable/selector_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_record_unit"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/iv_record_unuse"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="40dp">

                <TextView
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="数  量 :"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <sky.it.com.stock_statistics.customview.ClearEditText
                        android:id="@+id/et_stock_amount"
                        android:layout_toStartOf="@+id/iv_record_amount"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/iv_search"
                        android:background="@drawable/selector_bg"
                        android:paddingLeft="8dp"
                        android:inputType="number"
                        android:paddingRight="8dp"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_record_amount"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/iv_record_unuse"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="40dp">

                <TextView
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="特  征 :"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <sky.it.com.stock_statistics.customview.ClearEditText
                        android:id="@+id/et_stock_type"
                        android:layout_toStartOf="@+id/iv_record_type"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@+id/iv_search"
                        android:background="@drawable/selector_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/iv_record_type"
                        android:layout_marginRight="8dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@mipmap/iv_record_unuse"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="80dp">

                <TextView
                    android:text="*"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="标 有
                    图 标"
                    android:gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/layout_icons"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/selector_bg"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/iv_stock_select"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:src="@mipmap/iv_select"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/btn_save_info"
                android:background="@drawable/btn_save"
                android:layout_margin="15dp"
                android:text="保  存"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>