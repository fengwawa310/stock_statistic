<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBg">


    <ImageView
        android:id="@+id/iv_stock_login"
        android:src="@mipmap/stock_login_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_width="90dp"
        android:layout_height="90dp" />

    <TextView
        android:text="库 存 管 理"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_stock_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_below="@+id/iv_stock_login"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="45dp">

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:src="@mipmap/iv_user_name"
                    android:scaleType="fitXY"
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>

            <EditText
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="@dimen/line_one"
            android:layout_width="match_parent"
            android:background="@color/line_split" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="45dp">

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <ImageView
                    android:src="@mipmap/iv_password"
                    android:layout_centerInParent="true"
                    android:scaleType="fitXY"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </RelativeLayout>

            <EditText
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:textSize="15dp"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="@dimen/line_one"
            android:layout_width="match_parent"
            android:background="@color/line_split" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="45dp">

            <RelativeLayout
                android:layout_width="45dp"
                android:layout_height="45dp">
                <CheckBox
                    android:theme="@style/My_CheckBox"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/layout_login"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/btn_login"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="登   录"
                android:textColor="@color/mainBg"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>