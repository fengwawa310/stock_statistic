<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="sky.it.com.stock_statistics">

    <!--<uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>-->

    <application
        android:allowBackup="true"
        android:appComponentFactory="stock"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:replace="android:appComponentFactory">
        <activity
            android:name=".activity.WelcomeActivity"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--<activity android:name=".activity.LoginActivity">-->
        <!--<intent-filter>-->
        <!--<action android:name="android.intent.action.MAIN" />-->

        <!--<category android:name="android.intent.category.LAUNCHER" />-->
        <!--</intent-filter>-->
        <!--</activity>-->
        <activity
            android:name=".activity.StockStatisticActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:label="统计分析"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.StockEditActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:label="库存编辑"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.QuestionActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:label="常见问题"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.IconUploadActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:label="图标上传"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.StockInputActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:label="库存录入"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.StockInfoActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:label="库存录入"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.StockListActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:label="库存列表"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.RefreshListActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:label="下拉刷新"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.ExcelActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:label="excel导出"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.ChartActivity"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:label="图形展示"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>